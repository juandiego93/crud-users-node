<form id="add_user" method="POST" action="/api/users">
    <div class="new_user">
        <div class="form-group">
            <label for="typeDocument" class="text-light">Type Document</label>
            <select required name="typeDocument">
                <option value="" selected disabled hidden>Choose here</option>
                <% for(var i=0; i<typeDocument.length; i++) { %>
                    <option value="<%= typeDocument[i]._id %>">
                        <%= typeDocument[i].name %>
                    </option>
                    <% } %>
            </select>
        </div>
        <div class="form-group">
            <label for="document" class="text-light">Document</label>
            <input required type="text" name="document" value="" placeholder="10555555">
        </div>
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input required type="text" name="name" value="" placeholder="Juan Diego">
        </div>
        <div class="form-group">
            <label for="lastname" class="text-light">Last Name</label>
            <input required type="text" name="lastname" value="" placeholder="Osorio C.">
        </div>
        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input required type="text" name="email" value="" placeholder="juan@juan.com">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input required type="radio" name="gender" value="Male" id="radio-g-m">
                <label for="radio-g-m" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input required type="radio" name="gender" value="Female" id="radio-g-f">
                <label for="radio-g-f" class="radio-label">Female</label>
            </div>
        </div>
        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input required type="radio" name="status" value="Active" id="radio-s-1">
                <label for="radio-s-1" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input required type="radio" name="status" value="Inactive" id="radio-s-2">
                <label for="radio-s-2" class="radio-label">Inactive</label>
            </div>
        </div>
        <div class="form-group">
            <label for="area" class="text-light">Area</label>
            <select required name="area">
                <option value="" selected disabled hidden>Choose here</option>
                <% for(var i=0; i<areas.length; i++) { %>
                    <option value="<%= areas[i]._id %>">
                        <%= areas[i].name %>
                    </option>
                    <% } %>
            </select>
        </div>
        <div class="form-group">
            <label for="subarea" class="text-light">Subarea</label>
            <select required name="subarea">
                <option value="" selected disabled hidden>Choose here</option>
                <% for(var i=0; i<subareas.length; i++) { %>
                    <option value="<%= subareas[i]._id %>">
                        <%= subareas[i].name %>
                    </option>
                    <% } %>
            </select>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">
                Save
            </button>
        </div>
    </div>
</form>